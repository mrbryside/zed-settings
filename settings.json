// Bank Zed settings
{
  // --------------------------- font ---------------------------//
  // for macbook 14"
  // "ui_font_size": 15,
  // "buffer_font_size": 15,
  // "agent_font_size": 15,
  // "ui_font_family": "Courier New",
  // "buffer_font_family": "Courier New",
  // "agent_font_family": "Courier New",
  // "terminal": {
  //   "font_size": 14,
  //   "font_family": "Courier New"
  // },

  // for monitor 27"
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "agent_font_size": 16,
  "ui_font_family": "Courier New",
  "buffer_font_family": "Courier New",
  "agent_font_family": "Courier New",
  "terminal": {
    "font_size": 15,
    "font_family": "Courier New"
  },
  // --------------------- agent panel ---------------------//
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "version": "2"
  },
  // --------------------- coding setting ---------------------//
  "vim_mode": true,
  "autosave": "on_focus_change",

  // --------------------- customize appearance ---------------------//
  // -- menu and pane style
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "git_diff": false
  },
  "gutter": {
    "folds": false,
    "runnables": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    },
    "git_gutter": "hide" // remove annoying git indicator in front of line number
  },
  "tab_bar": {
    // "show_nav_history_buttons": false // disalbe nav <- -> button
    "show_tab_bar_buttons": false // disable tab bar button (right)
  },
  "scrollbar": {
    "show": "auto",
    "git_diff": false
  },
  "relative_line_numbers": true,
  "project_panel": {
    "scrollbar": {
      "show": "never"
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "file_finder": {
    "file_icons": true
    // "modal_max_width": "small"
  },
  // -- theme and coding color
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },
  "experimental.theme_overrides": {
    // "editor.background": "#292C32",
    // "tab.inactive_background": "#30343D",
    // "tab.active_background": "#2E2E2E",
    "status_bar.background": "#393735", // this is bottom bar
    "title_bar.background": "#393735",
    "tab_bar.background": "#282828",
    "panel.background": "#282828",
    "scrollbar.thumb.background": "#30343D",
    "background": "#2E2E2E",
    "syntax": {
      "comment": {
        "color": "#2ea542"
      },
      "comment.doc": {
        "color": "#2ea542"
      },
      "string": {
        "color": "#8ec07c"
      }
    }
  }
}
